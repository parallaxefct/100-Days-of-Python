#Pizza Order Challenge
#ask the user what size pizza, if they want pepperoni, and lastly if they want extra cheese

print("Welcome to Python Pizza Deliveries!")

#prompt user for size, pepperoni, and cheese
size = input("What size pizza do you want? S, M, or L ")
add_pepperoni = input("Do you want pepperoni? Y or N ")
extra_cheese = input("Do you want extra cheese? Y or N ")

price = 0

if size == 'S':
    price = 15

    if add_pepperoni == 'Y':
        price = price + 2

        if extra_cheese == 'Y':
            price = price + 1
            print(f"Your final bill is: ${price}.")

        else:
            print(f"Your final bill is: ${price}.")

    elif extra_cheese == 'Y':
        price = price + 1
        print(f"Your final bill is: ${price}.")

    else:
        print(f"Your final bill is: ${price}.")


if size == 'M':
    price = 20

    if add_pepperoni == 'Y':
        price = price + 3

        if extra_cheese == 'Y':
            price = price + 1
            print(f"Your final bill is: ${price}.")

        else:
            print(f"Your final bill is: ${price}.")

    elif extra_cheese == 'Y':
        price = price + 1
        print(f"Your final bill is: ${price}.")

    else:
        print(f"Your final bill is: ${price}.")


if size == 'L':
    price = 25

    if add_pepperoni == 'Y':
        price = price + 3

        if extra_cheese == 'Y':
            price = price + 1
            print(f"Your final bill is: ${price}.")

        else:
            print(f"Your final bill is: ${price}.")

    elif extra_cheese == 'Y':
        price = price + 1
        print(f"Your final bill is: ${price}.")

    else:
        print(f"Your final bill is: ${price}.")
